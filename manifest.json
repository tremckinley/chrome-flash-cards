{
  "manifest_version": 3,
  "name": "Study Aid Reminder",
  "version": "1.0",
  "description": "Periodic study reminders while browsing",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}