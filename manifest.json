{
  "manifest_version": 3,
  "name": "Nudge Study Buddy",
  "version": "1.0",
  "description": "Periodic study reminders while browsing",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "webNavigation",
    "activeTab",
    "notifications"

  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icons/nudge.png",
      "32": "./icons/nudge.png",
      "48": "./icons/nudge48.png",
      "128": "./icons/nudge128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}